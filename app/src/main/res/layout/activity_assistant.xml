<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_revert"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="AI Massage Assistant"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- User Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ Your Information"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp"/>

                <!-- Age Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age (years)"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="3"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Weight Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Weight (kg)"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:maxLength="5"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Height Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Height (cm)"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:maxLength="5"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Health Conditions -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health Conditions"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupConditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:selectionRequired="false"
                    app:singleSelection="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipBackPain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Back Pain"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipNeckPain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Neck Pain"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipStress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stress"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFatigue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fatigue"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipInsomnia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Insomnia"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>
                </com.google.android.material.chip.ChipGroup>

                <!-- Massage Goals -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Massage Goals"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupGoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRelaxation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relaxation"
                        android:checked="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPainRelief"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pain Relief"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRecovery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recovery"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipEnergy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Energy Boost"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Get Recommendation Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGetRecommendation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Get AI Recommendation"
            android:textSize="16sp"
            app:icon="@android:drawable/ic_menu_info_details"
            app:iconGravity="textStart"
            android:layout_marginBottom="16dp"/>

        <!-- Loading Indicator -->
        <LinearLayout
            android:id="@+id/layoutLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminate="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analyzing your profile..."
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <!-- Recommendation Result -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRecommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¤– AI Recommendation"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:layout_marginBottom="16dp"/>

                <!-- Mode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Mode:"
                        android:textSize="14sp"
                        android:textColor="#616161"/>

                    <TextView
                        android:id="@+id/txtRecommendedMode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gentle Relaxation"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>
                </LinearLayout>

                <!-- Intensity -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Intensity:"
                        android:textSize="14sp"
                        android:textColor="#616161"/>

                    <TextView
                        android:id="@+id/txtRecommendedLevel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Level 3 of 5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>
                </LinearLayout>

                <!-- Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Duration:"
                        android:textSize="14sp"
                        android:textColor="#616161"/>

                    <TextView
                        android:id="@+id/txtRecommendedDuration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15-20 minutes"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>
                </LinearLayout>

                <!-- Heat -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Heat Therapy:"
                        android:textSize="14sp"
                        android:textColor="#616161"/>

                    <TextView
                        android:id="@+id/txtRecommendedHeat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recommended"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"/>
                </LinearLayout>

                <!-- Explanation -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BBDEFB"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Why this recommendation?"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#757575"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/txtExplanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Based on your profile..."
                    android:textSize="12sp"
                    android:textColor="#616161"
                    android:lineSpacingExtra="2dp"/>

                <!-- Apply Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApplyRecommendation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apply This Setting"
                    android:layout_marginTop="16dp"
                    app:backgroundTint="#1976D2"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Presets -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Presets"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMorningEnergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="â˜€ï¸"
                        android:textSize="28sp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Morning Energy"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Level 4 â€¢ 10 min â€¢ No Heat"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRelaxation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸŒ™"
                        android:textSize="28sp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Evening Relaxation"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Level 2 â€¢ 20 min â€¢ Heat On"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDeepTissue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ’ª"
                        android:textSize="28sp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deep Tissue"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Level 5 â€¢ 15 min â€¢ Heat On"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>